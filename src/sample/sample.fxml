<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <children>
        <Button fx:id="botAzul" mnemonicParsing="false" onMouseClicked="#Click" onMouseEntered="#encimaAzul" onMouseExited="#fueraAzul" prefHeight="26.0" prefWidth="100.0" text="Azul" />
        <Button fx:id="botRojo" mnemonicParsing="false" onMouseClicked="#Click" onMouseEntered="#encimaRojo" onMouseExited="#fueraRojo" prefHeight="26.0" prefWidth="100.0" text="Rojo" GridPane.rowIndex="1" />
        <Button fx:id="botAmarillo" mnemonicParsing="false" onMouseClicked="#Click" onMouseEntered="#encimaAmarillo" onMouseExited="#fueraAmarillo" prefHeight="26.0" prefWidth="100.0" text="Amarillo" GridPane.rowIndex="2" />
        <Label fx:id="labAzul" text="Label" GridPane.columnIndex="1" />
        <Label fx:id="labRojo" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="labAmarillo" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </children>
    
</GridPane>